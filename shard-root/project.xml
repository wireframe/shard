  <developers>
    <developer>
      <name>Ryan Sonnek</name>
      <organization>codecrate consulting</organization>
      <id>wireframe</id>
      <email>wireframe@dev.java.net</email>
      <url>http://www.jroller.com/page/wireframe</url>
    </developer>
  </developers>

  <licenses>
    <name>The Apache Software License, Version 2.0</name>
    <url>http://www.apache.org/licenses/LICENSE-2.0</url>
    <distribution>manual</distribution>
    <comments></comments>
  </licenses>

  <dependencies>
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.0.4</version>
      <url>http://jakarta.apache.org/commons</url>
    </dependency>
    <dependency>
      <groupId>commons-collections</groupId>
      <artifactId>commons-collections</artifactId>
      <version>2.1</version>
      <url>http://jakarta.apache.org/commons</url>
    </dependency>

    <!-- EasyMock dependencies -->
    <dependency>
      <groupId>easymock</groupId>
      <artifactId>easymock</artifactId>
      <version>1.1</version>
      <url>http://www.easymock.org</url>
    </dependency>
    
    <!-- 
    StatCVS plugin dependencies 
    must have external CVS executable on path 
    and configured correctly (cvs login) to generate reports.
    -->
    <dependency>
      <groupId>statcvs</groupId>
      <artifactId>maven-statcvs-plugin</artifactId>
      <type>plugin</type>
      <version>2.4</version>
      <url>http://statcvs-xml.berlios.de/maven-plugin/</url>
    </dependency>
    
    <dependency>
      <groupId>maven-plugins</groupId>
      <artifactId>maven-findbugs-plugin</artifactId>
      <type>plugin</type>
      <version>0.8.4</version>
      <url>http://maven-plugins.sourceforge.net/maven-findbugs-plugin/index.html</url>
    </dependency>
  </dependencies>

  <build>
    <nagEmailAddress>wireframe@dev.java.net</nagEmailAddress>

    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>src/test</unitTestSourceDirectory>

    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
    </unitTest>

    <resources>
      <directory>${basedir}/src/test</directory>
      <includes>
        <include>**/*Test.java</include>
      </includes>
    </resources>
  </build>

  <reports>
    <report>maven-license-plugin</report>
	<report>maven-faq-plugin</report>
    <report>maven-changes-plugin</report>
    <report>maven-tasklist-plugin</report>
    <report>maven-dashboard-plugin</report>
	<report>maven-multichanges-plugin</report>

    <report>maven-javadoc-plugin</report>
    <report>maven-jxr-plugin</report>

    <report>maven-checkstyle-plugin</report>
    <report>maven-pmd-plugin</report>
    <report>maven-findbugs-plugin</report>
    
    <report>maven-jdepend-plugin</report>

    <report>maven-junit-report-plugin</report>
    <report>maven-clover-plugin</report>
    <report>maven-jcoverage-plugin</report>

    <report>maven-developer-activity-plugin</report>
    <report>maven-file-activity-plugin</report>
    <report>maven-changelog-plugin</report>
    <report>maven-statcvs-plugin</report>
<!--    
