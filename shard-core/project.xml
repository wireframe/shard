<?xml version="1.0" encoding="UTF-8"?>

<project>
  <extend>${basedir}/../shard-root/project.xml</extend>
  <pomVersion>3</pomVersion>
  <groupId>shard</groupId>
  <id>shard-core</id>
  <name>shard core module</name>
  <description>shard core module</description>
  <shortDescription>shard core module</shortDescription>
  
  <dependencies>
    <dependency>
      <groupId>shard</groupId>
      <artifactId>shard-dice</artifactId>
      <version>SNAPSHOT</version>
      <properties>
        <eclipse.dependency>true</eclipse.dependency>
      </properties>
    </dependency>
    
    <!-- HSQL dependencies -->
    <dependency>
      <groupId>hsqldb</groupId>
      <artifactId>hsqldb</artifactId>
      <version>1.7.2.2</version>
      <url>http://hsqldb.sf.net</url>
    </dependency>
          
    <!-- DBUnit dependencies -->
    <dependency>
      <groupId>dbunit</groupId>
      <artifactId>dbunit</artifactId>
      <version>2.1</version>
      <url>http://dbunit.sf.net</url>
    </dependency>
    <dependency>
      <groupId>maven-plugins</groupId>
      <artifactId>maven-dbunit-plugin</artifactId>
      <type>plugin</type>
      <version>1.5</version>
      <url>http://maven-plugins.sourceforge.net/maven-dbunit-plugin/</url>
    </dependency>
    
    <!-- Hibernate dependencies -->
    <dependency>
      <groupId>maven</groupId>
      <artifactId>maven-hibernate-plugin</artifactId>
      <type>plugin</type>
      <version>1.3</version>
      <url>http://maven.apache.org/reference/plugins/hibernate/</url>
    </dependency>
    <dependency>
      <groupId>hibernate</groupId>
      <artifactId>hibernate</artifactId>
      <version>2.1.6</version>
      <url>http://www.hibernate.org</url>
    </dependency>
    <dependency>
      <groupId>dom4j</groupId>
      <artifactId>dom4j</artifactId>
      <version>1.5</version>
      <url>http://www.dom4j.org</url>
    </dependency>
    <dependency>
      <groupId>odmg</groupId>
      <artifactId>odmg</artifactId>
      <version>3.0</version>
    </dependency>
    <dependency>
      <groupId>ehcache</groupId>
      <artifactId>ehcache</artifactId>
      <version>0.9</version>
    </dependency>
    <dependency>
      <groupId>cglib</groupId>
      <artifactId>cglib</artifactId>
      <version>2.0.2</version>
      <url>http://cglib.sf.net</url>
    </dependency>
    <dependency>
      <groupId>asm</groupId>
      <artifactId>asm</artifactId>
      <version>1.4.3</version>
      <url>http://cglib.sf.net</url>
    </dependency>
    <dependency>
      <groupId>geronimo-spec</groupId>
      <artifactId>geronimo-spec-jta</artifactId>
      <version>1.0-M1</version>
    </dependency>
    
    <!-- XDoclet dependencies -->
	<dependency>
		<groupId>xdoclet-plugins</groupId>
		<artifactId>maven-xdoclet2-plugin</artifactId>
		<version>1.0-SNAPSHOT</version>
		<type>plugin</type>
		<url>http://xdoclet.codehaus.org</url>
	</dependency>
	<dependency>
		<groupId>xdoclet-plugins</groupId>
		<artifactId>xdoclet-plugin-hibernate</artifactId>
		<version>SNAPSHOT</version>
		<url>http://xdoclet-plugins.sf.net/</url>
		<properties>
			<xdoclet.dependency>true</xdoclet.dependency>
		</properties>
	</dependency>    
  </dependencies>
  
  <build>
    <resources>
      <resource>
        <directory>${basedir}/src/conf</directory>
        <includes>
          <include>**/*.xml</include>
          <include>**/*.properties</include>
        </includes>
      </resource>
    </resources>
    <unitTest>
      <resources>
        <resource>
          <directory>${basedir}/src/test</directory>
          <includes>
            <include>**/*.xml</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
  </build>
</project>
