<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
	"http://www.springframework.org/dtd/spring-beans.dtd">
<!-- $Id: richclient-application-context.xml,v 1.18 2005/12/28 20:02:44 wireframe Exp $ -->
<beans>

	<bean id="application"
		class="org.springframework.richclient.application.Application">
		<constructor-arg index="0">
			<ref bean="applicationDescriptor"/>
		</constructor-arg>
		<constructor-arg index="1">
			<ref bean="lifecycleAdvisor"/>
		</constructor-arg>
	</bean>

	<bean id="lifecycleAdvisor"
		class="org.springframework.richclient.application.config.DefaultApplicationLifecycleAdvisor">
		<property name="windowCommandBarDefinitions">
			<value>commands-context.xml</value>
		</property>
		<property name="startingPageId">
			<value>skillManagerView</value>
		</property>
	</bean>

	<bean id="applicationDescriptor"
		class="com.codecrate.shard.ShardApplicationDescriptor">
	</bean>

	<bean id="applicationObjectConfigurer"
		class="org.springframework.richclient.application.config.DefaultApplicationObjectConfigurer">
		<constructor-arg index="0">
			<ref bean="messageSource"/>
		</constructor-arg>
		<constructor-arg index="1">
			<ref bean="imageSource"/>
		</constructor-arg>
		<constructor-arg index="2">
			<ref bean="iconSource"/>
		</constructor-arg>
	</bean>

	<bean id="applicationEventMulticaster"
		class="org.springframework.context.event.SimpleApplicationEventMulticaster"/>

	<bean id="componentFactory"
		class="org.springframework.richclient.factory.DefaultComponentFactory">
		<property name="iconSource">
			<ref bean="iconSource"/>
		</property>
		<property name="messageSource">
			<ref bean="messageSource"/>
		</property>
	</bean>

	<bean id="lookAndFeelConfigurer"
		class="org.springframework.richclient.application.config.JGoodiesLooksConfigurer">
		<property name="theme">
			<bean class="com.jgoodies.looks.plastic.theme.ExperienceBlue"/>
		</property>
	</bean>

	<bean id="messageSource"
		class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>messages</value>
				<value>org.springframework.richclient.application.messages</value>
			</list>
		</property>
	</bean>

	<bean id="imageResourcesFactory"
		class="org.springframework.context.support.ResourceMapFactoryBean">
		<property name="locations">
			<list>
				<value>classpath:org/springframework/richclient/image/images.properties</value>
				<value>classpath:images.properties</value>
			</list>
		</property>
		<property name="resourceBasePath">
			<value>images/</value>
		</property>
	</bean>

	<bean id="imageSource"
		class="org.springframework.richclient.image.DefaultImageSource">
		<constructor-arg index="0">
			<ref bean="imageResourcesFactory"/>
		</constructor-arg>
		<property name="brokenImageIndicator">
			<value>images/alert/error_obj.gif</value>
		</property>
	</bean>

	<bean id="iconSource"
		class="org.springframework.richclient.image.DefaultIconSource">
		<constructor-arg index="0">
			<ref bean="imageSource"/>
		</constructor-arg>
	</bean>

	<bean id="formComponentInterceptorFactory"
		class="org.springframework.richclient.form.builder.support.ChainedInterceptorFactory">
		<property name="interceptorFactories">
			<list>
				<bean class="org.springframework.richclient.form.builder.support.ColorValidationInterceptorFactory">
					<property name="errorColor">
						<value>255,245,245</value>
					</property>
				</bean>
				<bean class="org.springframework.richclient.form.builder.support.OverlayValidationInterceptorFactory"/>
				<bean class="org.springframework.richclient.text.TextComponentPopupInterceptorFactory"/>
				<bean class="org.springframework.richclient.list.ComboBoxAutoCompletionInterceptorFactory">
					<property name="messageSource">
						<ref bean="messageSource"/>
					</property>
				</bean>
			</list>
		</property>
	</bean>

    <bean id="formPropertyFaceDescriptorSource"
		class="org.springframework.binding.form.support.MessageSourceFormPropertyFaceDescriptorSource"/>


    <bean id="sourceLineHandler" class="com.codecrate.shard.transfer.pcgen.PcgenSourceLineHandler">
	  <constructor-arg><ref bean="sourceDao" /></constructor-arg>
	  <constructor-arg><ref bean="sourceDao" /></constructor-arg>
    </bean>

    <!-- skill manager view -->
	<bean id="skillManagerView"
		class="org.springframework.richclient.application.support.LookupViewDescriptor">
		<property name="viewPrototypeBeanName">
			<value>skillManager</value>
		</property>
	</bean>

    <bean id="skillImporter"
    	class="com.codecrate.shard.transfer.FileExtensionObjectImporterResolver">
    	<constructor-arg>
    	  <list>
	    	<bean class="com.codecrate.shard.transfer.excel.ExcelObjectImporter">
	    	  <constructor-arg>
	    	    <bean class="com.codecrate.shard.transfer.excel.ExcelSkillRowHandler">
				    <constructor-arg index="0"><ref bean="skillDao" /></constructor-arg>
				    <constructor-arg index="1"><ref bean="skillDao" /></constructor-arg>
				</bean>
			  </constructor-arg>
			</bean>
	    	<bean class="com.codecrate.shard.transfer.pcgen.PcgenObjectImporter">
	    	  <constructor-arg>
	    	    <bean class="com.codecrate.shard.transfer.pcgen.PcgenSkillLineHandler">
				    <constructor-arg index="0"><ref bean="skillDao" /></constructor-arg>
				    <constructor-arg index="1"><ref bean="skillDao" /></constructor-arg>
				    <constructor-arg index="2"><ref bean="abilityDao" /></constructor-arg>
				</bean>
			  </constructor-arg>
			  <constructor-arg><ref bean="sourceLineHandler" /></constructor-arg>
			</bean>
    	  </list>
    	</constructor-arg>
    </bean>

	<bean id="skillManager"
	    class="com.codecrate.shard.ui.view.ObjectManagerView"
	    singleton="false">
	    <constructor-arg>
		    <bean
		        class="com.codecrate.shard.ui.command.SkillCommandAdapter">
		        <constructor-arg index="0"><ref bean="skillDao" /></constructor-arg>
		        <constructor-arg index="1"><ref bean="skillDao" /></constructor-arg>
		        <constructor-arg index="2"><ref bean="skillImporter" /></constructor-arg>
		        <property name="deleteMessagePropertyName">
		          <value>confirmDeleteSkillDialog</value>
		        </property>
		    </bean>
	    </constructor-arg>
	    <constructor-arg>
		    <bean
		        class="com.codecrate.shard.ui.form.SkillFormFactory">
		        <constructor-arg><ref bean="abilityDao" /></constructor-arg>
		        <constructor-arg><ref bean="sourceDao" /></constructor-arg>
		    </bean>
	    </constructor-arg>
	</bean>

	<!-- feat manager view -->
	<bean id="featManagerView"
		class="org.springframework.richclient.application.support.LookupViewDescriptor">
		<property name="viewPrototypeBeanName">
			<value>featManager</value>
		</property>
	</bean>

    <bean id="featImporter"
    	class="com.codecrate.shard.transfer.FileExtensionObjectImporterResolver">
    	<constructor-arg>
    	  <list>
	    	<bean class="com.codecrate.shard.transfer.excel.ExcelObjectImporter">
	    	  <constructor-arg>
	    	    <bean class="com.codecrate.shard.transfer.excel.ExcelFeatRowHandler">
				    <constructor-arg index="0"><ref bean="featDao" /></constructor-arg>
				    <constructor-arg index="1"><ref bean="featDao" /></constructor-arg>
				</bean>
			  </constructor-arg>
			</bean>
	    	<bean class="com.codecrate.shard.transfer.pcgen.PcgenObjectImporter">
	    	  <constructor-arg>
	    	    <bean class="com.codecrate.shard.transfer.pcgen.PcgenFeatLineHandler">
				    <constructor-arg index="0"><ref bean="featDao" /></constructor-arg>
				    <constructor-arg index="1"><ref bean="featDao" /></constructor-arg>
				</bean>
			  </constructor-arg>
			  <constructor-arg><ref bean="sourceLineHandler" /></constructor-arg>
			</bean>
    	  </list>
    	</constructor-arg>
    </bean>

	<bean id="featManager"
	    class="com.codecrate.shard.ui.view.ObjectManagerView"
	    singleton="false">
	    <constructor-arg>
		    <bean
		        class="com.codecrate.shard.ui.command.FeatCommandAdapter">
		        <constructor-arg index="0"><ref bean="featDao" /></constructor-arg>
		        <constructor-arg index="1"><ref bean="featDao" /></constructor-arg>
		        <constructor-arg index="2"><ref bean="featImporter" /></constructor-arg>
		        <property name="deleteMessagePropertyName">
		          <value>confirmDeleteFeatDialog</value>
		        </property>
		    </bean>
	    </constructor-arg>
	    <constructor-arg>
		    <bean
		        class="com.codecrate.shard.ui.form.FeatFormFactory">
		        <constructor-arg><ref bean="sourceDao" /></constructor-arg>
		    </bean>
	    </constructor-arg>
	</bean>

	<!-- spell manager view -->
	<bean id="spellManagerView"
		class="org.springframework.richclient.application.support.LookupViewDescriptor">
		<property name="viewPrototypeBeanName">
			<value>spellManager</value>
		</property>
	</bean>

    <bean id="spellImporter"
    	class="com.codecrate.shard.transfer.FileExtensionObjectImporterResolver">
    	<constructor-arg>
    	  <list>
	    	<bean class="com.codecrate.shard.transfer.pcgen.PcgenObjectImporter">
	    	  <constructor-arg>
	    	    <bean class="com.codecrate.shard.transfer.pcgen.PcgenSpellLineHandler">
				    <constructor-arg index="0"><ref bean="spellDao" /></constructor-arg>
				    <constructor-arg index="1"><ref bean="spellDao" /></constructor-arg>
				</bean>
			  </constructor-arg>
			  <constructor-arg><ref bean="sourceLineHandler" /></constructor-arg>
			</bean>
    	  </list>
    	</constructor-arg>
    </bean>

	<bean id="spellManager"
	    class="com.codecrate.shard.ui.view.ObjectManagerView"
	    singleton="false">
	    <constructor-arg>
		    <bean
		        class="com.codecrate.shard.ui.command.SpellCommandAdapter">
		        <constructor-arg index="0"><ref bean="spellDao" /></constructor-arg>
		        <constructor-arg index="1"><ref bean="spellDao" /></constructor-arg>
		        <constructor-arg index="2"><ref bean="spellImporter" /></constructor-arg>
		        <property name="deleteMessagePropertyName">
		          <value>confirmDeleteSpellDialog</value>
		        </property>
		    </bean>
	    </constructor-arg>
	    <constructor-arg>
		    <bean
		        class="com.codecrate.shard.ui.form.SpellFormFactory">
		        <constructor-arg><ref bean="sourceDao" /></constructor-arg>
		    </bean>
	    </constructor-arg>
	</bean>

	<!-- item manager view -->
	<bean id="itemManagerView"
		class="org.springframework.richclient.application.support.LookupViewDescriptor">
		<property name="viewPrototypeBeanName">
			<value>itemManager</value>
		</property>
	</bean>

    <bean id="itemImporter"
    	class="com.codecrate.shard.transfer.FileExtensionObjectImporterResolver">
    	<constructor-arg>
    	  <list>
	    	<bean class="com.codecrate.shard.transfer.pcgen.PcgenObjectImporter">
	    	  <constructor-arg>
	    	    <bean class="com.codecrate.shard.transfer.pcgen.PcgenItemLineHandler">
				    <constructor-arg index="0"><ref bean="itemDao" /></constructor-arg>
				    <constructor-arg index="1"><ref bean="itemDao" /></constructor-arg>
				</bean>
			  </constructor-arg>
			  <constructor-arg><ref bean="sourceLineHandler" /></constructor-arg>
			</bean>
    	  </list>
    	</constructor-arg>
    </bean>

	<bean id="itemManager"
	    class="com.codecrate.shard.ui.view.ObjectManagerView"
	    singleton="false">
	    <constructor-arg>
		    <bean
		        class="com.codecrate.shard.ui.command.ItemCommandAdapter">
		        <constructor-arg index="0"><ref bean="itemDao" /></constructor-arg>
		        <constructor-arg index="1"><ref bean="itemDao" /></constructor-arg>
		        <constructor-arg><ref bean="itemImporter" /></constructor-arg>
		        <property name="deleteMessagePropertyName">
		          <value>confirmDeleteItemDialog</value>
		        </property>
		    </bean>
	    </constructor-arg>
	    <constructor-arg>
		    <bean
		        class="com.codecrate.shard.ui.form.ItemFormFactory">
		        <constructor-arg><ref bean="sourceDao" /></constructor-arg>
		    </bean>
	    </constructor-arg>
	</bean>

    <!-- race manager view -->
	<bean id="raceManagerView"
		class="org.springframework.richclient.application.support.LookupViewDescriptor">
		<property name="viewPrototypeBeanName">
			<value>raceManager</value>
		</property>
	</bean>

	<bean id="raceManager"
	    class="com.codecrate.shard.ui.view.ObjectManagerView"
	    singleton="false">
	    <constructor-arg>
		    <bean
		        class="com.codecrate.shard.ui.command.RaceCommandAdapter">
		        <constructor-arg index="0"><ref bean="raceDao" /></constructor-arg>
		        <constructor-arg index="1"><ref bean="raceDao" /></constructor-arg>
		        <property name="deleteMessagePropertyName">
		          <value>confirmDeleteRaceDialog</value>
		        </property>
		    </bean>
	    </constructor-arg>
	    <constructor-arg>
		    <bean
		        class="com.codecrate.shard.ui.form.RaceFormFactory">
		    </bean>
	    </constructor-arg>
	</bean>

    <!-- character class manager view -->
	<bean id="characterClassManagerView"
		class="org.springframework.richclient.application.support.LookupViewDescriptor">
		<property name="viewPrototypeBeanName">
			<value>characterClassManager</value>
		</property>
	</bean>

    <bean id="characterClassImporter"
    	class="com.codecrate.shard.transfer.FileExtensionObjectImporterResolver">
    	<constructor-arg>
    	  <list>
	    	<bean class="com.codecrate.shard.transfer.pcgen.PcgenObjectImporter">
	    	  <constructor-arg>
	    	    <bean class="com.codecrate.shard.transfer.pcgen.PcgenCharacterClassLineHandler">
				    <constructor-arg index="0"><ref bean="characterClassDao" /></constructor-arg>
				    <constructor-arg index="1"><ref bean="characterClassDao" /></constructor-arg>
				</bean>
			  </constructor-arg>
			  <constructor-arg><ref bean="sourceLineHandler" /></constructor-arg>
			</bean>
    	  </list>
    	</constructor-arg>
    </bean>

	<bean id="characterClassManager"
	    class="com.codecrate.shard.ui.view.ObjectManagerView"
	    singleton="false">
	    <constructor-arg>
		    <bean
		        class="com.codecrate.shard.ui.command.CharacterClassCommandAdapter">
		        <constructor-arg><ref bean="characterClassDao" /></constructor-arg>
		        <constructor-arg><ref bean="characterClassDao" /></constructor-arg>
		        <constructor-arg><ref bean="characterClassImporter" /></constructor-arg>
		        <property name="deleteMessagePropertyName">
		          <value>confirmDeleteCharacterClassDialog</value>
		        </property>
		    </bean>
	    </constructor-arg>
	    <constructor-arg>
		    <bean
		        class="com.codecrate.shard.ui.form.CharacterClassFormFactory">
		    </bean>
	    </constructor-arg>
	</bean>
</beans>
