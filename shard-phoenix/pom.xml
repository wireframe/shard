<model>
  <parent>
    <groupId>com.codecrate.shard</groupId>
    <artifactId>shard-root</artifactId>
    <version>0.3.0-SNAPSHOT</version>
    <relativePath>../shard-root/pom.xml</relativePath>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <groupId>com.codecrate.shard</groupId>
  <artifactId>shard-phoenix</artifactId>
  <name>shard phoenix module</name>
  <packaging>jar</packaging>
  <version>0.3.0-SNAPSHOT</version>

  <dependencies>
    <dependency>
      <groupId>com.codecrate.shard</groupId>
      <artifactId>shard-hibernate</artifactId>
      <version>0.3.0-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>com.codecrate.shard</groupId>
      <artifactId>shard-transfer</artifactId>
      <version>0.3.0-SNAPSHOT</version>
    </dependency>

    <!-- spring-rcp dependencies -->
    <dependency>
      <groupId>spring-rcp</groupId>
      <artifactId>spring-richclient</artifactId>
      <version>SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>spring-rcp</groupId>
      <artifactId>spring-richclient-resources</artifactId>
      <version>SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>spring-rcp</groupId>
      <artifactId>spring-richclient-sandbox</artifactId>
      <version>SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>spring-rcp</groupId>
      <artifactId>spring-sandbox</artifactId>
      <version>SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>spring-rcp</groupId>
      <artifactId>spring-binding</artifactId>
      <version>SNAPSHOT</version>
    </dependency>

    <!-- jgoodies dependencies -->
    <dependency>
      <groupId>jgoodies</groupId>
      <artifactId>looks</artifactId>
      <version>1.3.1</version>
    </dependency>
    <dependency>
      <groupId>jgoodies</groupId>
      <artifactId>forms</artifactId>
      <version>1.0.5</version>
    </dependency>

    <!-- javahelp dependencies -->
    <dependency>
      <groupId>javahelp</groupId>
      <artifactId>javahelp</artifactId>
      <version>2.0.2</version>
    </dependency>

    <!-- glazedlists dependencies -->
    <dependency>
      <groupId>glazedlists</groupId>
      <artifactId>glazedlists</artifactId>
      <version>0.9.6</version>
    </dependency>
  </dependencies>

  <build>
    <resources>
      <resource>
        <directory>${basedir}/src/main/resources</directory>
        <includes>
          <include>**/*.gif</include>
          <include>**/*.png</include>
        </includes>
      </resource>
      <resource>
        <directory>${basedir}/src/main/spring</directory>
        <includes>
          <include>**/*.xml</include>
          <include>**/*.properties</include>
        </includes>
      </resource>
    </resources>

    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifest>
              <mainClass>com.codecrate.shard.ShardPhoenix</mainClass>
              <!--
              <addClasspath>true</addClasspath>
              -->
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <descriptor>assembly-descriptor-bin-with-dependencies.xml</descriptor>
          <finalName>shard-phoenix</finalName>
          <outputDirectory>target/bin</outputDirectory>
          <workDirectory>target/temp-bin</workDirectory>
        </configuration>
      </plugin>
    </plugins>
  </build>
</model>
