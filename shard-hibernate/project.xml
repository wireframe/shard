<?xml version="1.0" encoding="UTF-8"?>

<project>
  <extend>${basedir}/../shard-root/project.xml</extend>
  <pomVersion>3</pomVersion>
  <groupId>shard</groupId>
  <id>shard-hibernate</id>
  <name>shard hibernate module</name>
  <description>shard hibernate module</description>
  <shortDescription>shard hibernate module</shortDescription>
  
  <dependencies>
    <dependency>
      <groupId>shard</groupId>
      <artifactId>shard-dice</artifactId>
      <version>SNAPSHOT</version>
      <properties>
        <eclipse.dependency>true</eclipse.dependency>
      </properties>
    </dependency>
    <dependency>
      <groupId>shard</groupId>
      <artifactId>shard-core</artifactId>
      <version>SNAPSHOT</version>
      <properties>
        <eclipse.dependency>true</eclipse.dependency>
      </properties>
    </dependency>
    
    <!-- HSQL dependencies -->
    <dependency>
      <groupId>hsqldb</groupId>
      <artifactId>hsqldb</artifactId>
      <version>1.7.3.3</version>
      <url>http://hsqldb.sf.net</url>
    </dependency>
          
    <!-- DBUnit dependencies -->
    <dependency>
      <groupId>dbunit</groupId>
      <artifactId>dbunit</artifactId>
      <version>2.1</version>
      <url>http://dbunit.sf.net</url>
    </dependency>
    <dependency>
      <groupId>maven-plugins</groupId>
      <artifactId>maven-dbunit-plugin</artifactId>
      <type>plugin</type>
      <version>1.5</version>
      <url>http://maven-plugins.sourceforge.net/maven-dbunit-plugin/</url>
    </dependency>
    
    <!-- Hibernate dependencies -->
    <dependency>
      <groupId>maven</groupId>
      <artifactId>maven-hibernate-plugin</artifactId>
      <type>plugin</type>
      <version>1.3</version>
      <url>http://maven.apache.org/reference/plugins/hibernate/</url>
    </dependency>
    <dependency>
      <groupId>hibernate</groupId>
      <artifactId>hibernate</artifactId>
      <version>2.1.8</version>
      <url>http://www.hibernate.org</url>
    </dependency>
    <dependency>
      <groupId>dom4j</groupId>
      <artifactId>dom4j</artifactId>
      <version>1.5</version>
      <url>http://www.dom4j.org</url>
    </dependency>
    <dependency>
      <groupId>odmg</groupId>
      <artifactId>odmg</artifactId>
      <version>3.0</version>
    </dependency>
    <dependency>
      <groupId>ehcache</groupId>
      <artifactId>ehcache</artifactId>
      <version>0.9</version>
    </dependency>
    <dependency>
      <groupId>cglib</groupId>
      <artifactId>cglib</artifactId>
      <version>2.0.2</version>
      <url>http://cglib.sf.net</url>
    </dependency>
    <dependency>
      <groupId>asm</groupId>
      <artifactId>asm</artifactId>
      <version>1.4.3</version>
      <url>http://cglib.sf.net</url>
    </dependency>
    <dependency>
      <groupId>geronimo-spec</groupId>
      <artifactId>geronimo-spec-jta</artifactId>
      <version>1.0-M1</version>
    </dependency>
    
    <!-- commons-dbcp dependencies -->
    <dependency>
      <groupId>commons-dbcp</groupId>
      <artifactId>commons-dbcp</artifactId>
      <version>1.2.1</version>
      <url>http://jakarta.apache.org/commons/dbcp/</url>
    </dependency>

    <!-- commons-pool dependencies -->
    <dependency>
      <groupId>commons-pool</groupId>
      <artifactId>commons-pool</artifactId>
      <version>1.2</version>
      <url>http://jakarta.apache.org/commons/pool/</url>
    </dependency>
    
    <!-- springframework dependencies -->
    <dependency>
      <groupId>springframework</groupId>
      <artifactId>spring-core</artifactId>
      <version>1.1.5</version>
      <url>http://springframework.org</url>
    </dependency>
    <dependency>
      <groupId>springframework</groupId>
      <artifactId>spring-aop</artifactId>
      <version>1.1.5</version>
      <url>http://springframework.org</url>
    </dependency>
    <dependency>
      <groupId>springframework</groupId>
      <artifactId>spring-context</artifactId>
      <version>1.1.5</version>
      <url>http://springframework.org</url>
    </dependency>
    <dependency>
      <groupId>springframework</groupId>
      <artifactId>spring-orm</artifactId>
      <version>1.1.5</version>
      <url>http://springframework.org</url>
    </dependency>
    <dependency>
      <groupId>springframework</groupId>
      <artifactId>spring-dao</artifactId>
      <version>1.1.5</version>
      <url>http://springframework.org</url>
    </dependency>
    <dependency>
      <groupId>aopalliance</groupId>
      <artifactId>aopalliance</artifactId>
      <version>1.0</version>
    </dependency>
    
  </dependencies>
  
  <build>
    <resources>
      <resource>
        <directory>${basedir}/src/hibernate</directory>
        <includes>
          <include>**/*.xml</include>
          <include>**/*.properties</include>
        </includes>
      </resource>
      <resource>
        <directory>${basedir}/src/spring</directory>
        <includes>
          <include>**/*.xml</include>
          <include>**/*.properties</include>
        </includes>
      </resource>
    </resources>
    
    <unitTest>
      <resources>
        <resource>
          <directory>${basedir}/src/data</directory>
          <includes>
            <include>**/*.xml</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
  </build>
</project>
