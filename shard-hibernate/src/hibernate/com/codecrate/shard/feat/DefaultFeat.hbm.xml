<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping package="com.codecrate.shard.feat">

    <class name="DefaultFeat" table="SHA_FEAT">

        <id name="name" type="string" unsaved-value="null" access="field">
            <column name="name" sql-type="char(32)" not-null="true"/>
            <generator class="assigned"/>
        </id>

        <property name="type" access="field">
            <column name="type" not-null="true" />
        </property>
    </class>

</hibernate-mapping>