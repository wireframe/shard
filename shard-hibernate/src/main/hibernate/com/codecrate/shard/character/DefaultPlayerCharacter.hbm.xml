<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>

    <class name="com.codecrate.shard.character.DefaultPlayerCharacter" table="SHA_CHARACTER">

        <id name="id" type="string" unsaved-value="null" access="field">
            <column name="ID" sql-type="char(32)" not-null="true"/>
            <generator class="uuid.hex"/>
        </id>

        <property name="alignment"
         column="ALIGNMENT"
		 type="com.codecrate.shard.character.AlignmentUserType"
		 not-null="true"
         access="field"/>

        <many-to-one name="race"
         class="com.codecrate.shard.race.DefaultRace"
         column="RACE"
         cascade="all"
         access="field"/>

		<one-to-one name="progression"
		 cascade="all"
		 class="com.codecrate.shard.character.DefaultCharacterProgression"
		 access="field" />
		 
        <property name="name"
         column="NAME"
		 not-null="true"
         access="field"/>
    </class>

</hibernate-mapping>